<!DOCTYPE html>
<html>
  <head>
    <title>Authapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if !logged_in? %>
        <%= link_to "Login", login_path %>
      <% else %>
        <%= link_to "Log out", logout_path, method: :post %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
